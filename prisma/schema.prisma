// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique
  name        String?
  role        String   @default("USER") // USER, BROKER
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  favorites   Property[] // Relation to properties favorited by user
  interactions Interaction[]
}

model Property {
  id              String   @id @default(uuid())
  crmId           String?
  title           String
  location        String
  city            String?
  price           String
  type            String   // 'new', 'resale', 'project', 'commercial'
  videoUrl        String
  mainVideoUrl    String?
  thumbnailUrl    String?
  imageUrls       String[]
  description     String
  bedrooms        Int
  bathrooms       Int
  area            String    // areaSqFt
  phoneNumber     String    // agentPhone
  whatsappNumber  String    // agentWhatsapp
  agentName       String?
  latitude        Float
  longitude       Float
  amenities       String[]
  
  // Extra details
  possession      String?
  parking         String?
  facing          String?
  floor           String?
  totalFloors    String?
  builder         String?
  reraRegistered  Boolean?
  brochureUrl     String?
  googleMapsUrl   String?
  pincode         String?
  panoramas       Json?         // 360-degree panoramic images
  searchKeywords  String[]

  availability    String?   // For New Properties (e.g. "2, 3 BHK")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  favoritedBy     User[]
  interactions    Interaction[]

  @@index([type])
  @@index([city])
  @@index([createdAt])
}

model Admin {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String   // Hashed
  name        String?
  role        String   @default("ADMIN")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Interaction {
  id              String   @id @default(uuid())
  userId          Int?
  userName        String?
  userPhone       String?
  interactionType String   // 'enquiry', 'like', 'view', 'call', 'search', 'share'
  propertyId      String?
  propertyTitle   String?
  message         String?
  details         Json?    // For flexible tracking data
  
  createdAt       DateTime @default(now())
  
  user            User?     @relation(fields: [userId], references: [id])
  property        Property? @relation(fields: [propertyId], references: [id])
}

model Setting {
  id        String   @id @default("global")
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  priority  Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id        String   @id @default(uuid())
  title     String
  subtitle  String
  imageUrl  String
  category  String   // 'new', 'resale', 'commercial'
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OTP {
  id          String   @id @default(uuid())
  phoneNumber String
  otp         String
  expiresAt   DateTime
  attempts    Int      @default(0)
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([phoneNumber])
  @@index([expiresAt])
}

